layout: default.njk
title_word: Tags
title: All Tags
permalink: /tags/index.html
---

<h1 class="page-title">{{title}}</h1>

<ol class="taglist">
  {% for tag in taglist | sort(false, false, "name")  %}
    {% set tagCount = collections[ tag.name ].length %}
    <li class="tag">
      <a href="/tags/{{tag.name}}" class="tag-badge">{{ tag.name }}</a>
      <span class="tag-count">Ã— {{tagCount}}</span>
      <div class="tag-description">{{ tag.description }}</div>
    </li>
  {% endfor %}
</ol>